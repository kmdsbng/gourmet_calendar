doctype html
html
  head
    title
      | GourmetCalendar
    = stylesheet_link_tag 'application', media: 'all'
    script src="http://fb.me/react-0.11.2.js"
    script src="http://fb.me/JSXTransformer-0.11.2.js"
    = javascript_include_tag 'application'
    = csrf_meta_tags
  body
    header.navbar.navbar-default role='navigation'
      div.container
        div.navbar-header
          button.navbar-toggle type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
          span.sr-only
            | Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
          = link_to 'Gourmet Calendar', root_path, class: 'navbar-brand'
        div.collapse.navbar-collapse id="bs-example-navbar-collapse-1"
          ul.nav.navbar-nav.navbar-right
            li
              - if logged_in?
                = link_to 'ログアウト', logout_path
              - else
                = link_to 'Twitterでログイン', '/auth/twitter'

    div.container
      - if flash[:notice]
        div.alert.alert-success
          = flash[:notice]
      = yield


