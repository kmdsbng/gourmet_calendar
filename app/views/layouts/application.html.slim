doctype html
html
  head
    title
      | GourmetCalendar
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  body
    header.navbar.navbar-default role='navigation'
      div.container
        div.navbar-header
          button.navbar-toggle type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
          span.sr-only
            | Toggle navigation
          span.icon-bar
            = link_to '新着一覧', '/event_sources/todos', class: 'navbar-brand'
          span.icon-bar
            = link_to '登録済一覧', '/event_sources/event_createds', class: 'navbar-brand'
          span.icon-bar
            = link_to '無視一覧', '/event_sources/ignoreds', class: 'navbar-brand'
        div.collapse.navbar-collapse id="bs-example-navbar-collapse-1"
          ul.nav.navbar-nav.navbar-right
            li
              - if logged_in?
                = link_to 'ログアウト', logout_path
              - else
                = link_to 'Twitterでログイン', '/auth/twitter'

    div.container
      - if flash[:notice]
        div.alert.alert-success
          = flash[:notice]
      = yield


